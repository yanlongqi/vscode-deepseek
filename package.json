{
	"name": "vscode-openai-copilot",
	"preview": true,
	"publisher": "yanlongqi",
	"icon": "openai.png",
	"displayName": "OpenAI Copilot Chat Assistant",
	"description": "基于 OpenAI 的智能编程助手",
	"version": "0.0.1",
	"galleryBanner": {
        "color": "#ffffff",
        "theme": "light"
    },
	"author": {
		"name": "yanlongqi",
		"email": "yuchat@163.com"
	},
	"homepage": "https://github.com/yanlongqi/vscode-openai-chat/blob/main/README.md",
	"bugs": {
        "url": "https://github.com/yanlongqi/vscode-openai-chat/issues"
    },
	"keywords": [
        "openai",
		"copilot",
		"chat",
		"agent",
		"assistant",
		"ai",
		"gpt",
		"nlp"
    ],
	"repository": {
		"type": "git",
		"url": "https://github.com/yanlongqi/vscode-openai-chat"
	},
	"license": "MIT",
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"chatParticipants": [
			{
				"id": "dev.yanlongqi.agents.openai",
				"fullName": "智能编程助手",
				"name": "openai",
				"description": "我是你的编程助手。",
				"isSticky": true
			}
		],
		"configuration": {
			"title": "OpenAI Chat",
			"properties": {
				"openai.chat.model": {
					"type": "string",
					"default": "gpt-3.5-turbo",
					"description": "模型名称"
				},
				"openai.api.baseUrl": {
					"type": "string",
					"default": "https://api.openai.com/v1",
					"description": "API地址，如https://api.openai.com/v1"
				},
				"openai.api.key": {
					"type": "string",
					"default": "",
					"description": "API秘钥"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"dependencies": {
		"openai": "^4.0.0"
	},
	"devDependencies": {
		"@types/node": "^16.18.34",
		"@types/vscode": "^1.85.0",
		"typescript": "^5.1.3"
	}
}